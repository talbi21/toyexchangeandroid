<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SwapDemand">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Demand to Swap"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/ToyPicClient1"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/bg_dark_rounded" />

            <ImageView
                android:id="@+id/ToyPic3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_swap_calls_24" />

            <ImageView
                android:id="@+id/ToyPicClient2"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/bg_dark_rounded" />

         </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddSwap"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="80dp"
            app:cornerRadius="10dp"
            android:text="Swap"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:background="@drawable/bg_purple_card">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Demand to Buy"
                android:gravity="start"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddBuy"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="40dp"
                    app:cornerRadius="10dp"
                    android:text="Buy"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ToyPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Price"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="40dp"
                    />

            </LinearLayout>

        </FrameLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>